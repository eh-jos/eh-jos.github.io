{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Democratice Republic of Congo Displacement",
      "anchor": "start",
      "subtitle": "Internally Displaced Persons | UNHCR via ECO-API",
      "fontSize": "14",
      "subtitleFontSize": "12",
      "color": "#db5e5e",
      "subtitleColor": "#17d346"
    },
    "height": "250",
    "width": "400",
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
    "background": "#ffffff",
    "view": {
      "fill": "#ffffff",
      "strokeOpacity": 0
    },
    "data": {
      "url": "https://api.economicsobservatory.com/cod/displ?vega",
      "format": {
        "type": "json"
      }
    },
    "mark": {
      "type": "line",
      "color": "#f4134d",
      "strokeWidth": "2"
    },
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "axis": {
          "title": "",
          "titleColor": "#122B39",
          "grid": false
        }
      },
      "y": {
        "field": "value",
        "type": "quantitative",
        "axis": {
          "title": "",
          "titleColor": "#32749a",
          "grid": false
        }
      }
    }
  }